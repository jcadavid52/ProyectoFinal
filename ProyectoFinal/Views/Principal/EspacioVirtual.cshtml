<form action="@Url.Action("PublicarUsuario")" method="post">
    <label>Nombre</label>
    <br />
    <input type="text" name="NOMBRE_USUARIO" value="" /><br /><br />

    <label>Apellidos</label>
    <br />
    <input type="text" name="APELLIDO_USUARIO" value="" />
    <br />
    <br />

    <label>Teléfono</label>
    <br />
    <input type="text" name="TELEFONO" value="" />
    <br />
    <br />

    <label>Celular</label>
    <br />
    <input type="text" name="CELULAR" value="" />
    <br />
    <br />
    <label>Correo</label>
    <br />
    <input type="text" name="CORREO" value="" />
    <br />
    <br />
    <label>País</label>
    <br />
    <input type="text" name="PAIS" value="" />
    <br />
    <br />

    <input type="text" name="FK_SESION" value="@Session["ID"]" />
    <br />
    <br />
    <input type="submit" name="name" value="Unirse a la comunidad" />
